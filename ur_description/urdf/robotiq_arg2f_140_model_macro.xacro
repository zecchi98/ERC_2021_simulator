      <origin xyz="-0.03 0.01 ${reflect * 0.005}" rpy="3.141 0 0" />
      <parent link="${prefix}${fingerprefix}_inner_finger" />
      <child link="${prefix}${fingerprefix}_finger_tip_temp" />
